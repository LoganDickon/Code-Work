######################
### Window Manager ###
######################

#: import NoTransition kivy.uix.screenmanager.NoTransition
WindowManager: 
	transition: NoTransition()
	Log_in:
		name: "first"
	Sign_up:
		name: "second"
	Home:
		name: 'third'

#----------------#
#-- Login Page --#
#----------------#

<Log_in>
	
	MDFloatLayout:
		md_bg_color: [10/255, 83/255, 140/255, 1]
		size: root.width, root.height

		MDIconButton:
			icon: "close"
			on_release: app.exit_dialog()
			pos_hint: {"right": 1, "top": 1}
			theme_text_color: "Custom"
			text_color: [0/255, 0/255, 0/255, 1]

		MDFillRoundFlatButton:
			text: "SIGN OUT"
			font_size: 15
			pos_hint: {"right":.96, "top":.994}
			md_bg_color: [100/255, 100/255, 100/255, 1]
			theme_text_color: "Custom"
			text_color: 1/255, 1/255, 1/255, 1
			on_release: app.root.current = "third"

	MDCard:
		md_bg_color: [1, 1, 1, 1]
		size_hint: None, None
		size: 420, 500
		pos_hint: {"center_x": .5, "center_y": .5}
		elevation: 15
		padding: 20
		spacing: 30
		orientation: 'vertical'
		
		FitImage:
			size_hint: None, None
			height: "100dp"
			width: "370dp"
			source: "C:/projects/Atorlogo.jpg"

		MDLabel:
			text: 'Sign in'
			font_size: 30
			theme_text_color: "Custom"
			text_color: [125/255, 125/255, 125/255, 1]
			halign: "center"
			size_hint_y: None
			height: 20

		MDTextFieldRound:
			id: accountid
			hint_text: 'Enter Username'
			icon_right: 'account'
			size_hint_x: None
			width: 220
			font_size: 20
			pos_hint: {"center_x":.5}
			color_active: [155/255, 155/255, 155/255, 1]
			normal_color: [155/255, 155/255, 155/255, 1]

		MDTextFieldRound:
			id: passwordid
			hint_text: 'Enter Password'
			icon_right: 'key-variant'
			size_hint_x: None
			width: 220
			font_size: 20
			pos_hint: {"center_x":.5}
			color_active: [155/255, 155/255, 155/255, 1]
			normal_color: [155/255, 155/255, 155/255, 1]
			password: True

		MDFloatLayout:
			MDFillRoundFlatIconButton:
				icon: 'account-multiple-plus'
				text: "CREATE"
				font_size: 15
				#size_hint: .1, .4
				pos_hint: {"center_x":.32, "center_y":.7}
				md_bg_color: [10/255, 83/255, 140/255, 1]
				on_release: app.root.current = "second"

			MDFillRoundFlatIconButton:
				icon: 'login-variant'
				text: "LOG IN"
				font_size: 15
				size_hint: .3, .36
				pos_hint: {"center_x":.67, "center_y":.7}
				md_bg_color: [10/255, 83/255, 140/255, 1]
				on_release: root.login()

		Widget:
			size_hint_y: None
			height: 15
			color_active: [1, 1, 1, 1]

#-----------------#
#-- Signup Page --#
#-----------------#

<Sign_up>
	
	MDFloatLayout:
		md_bg_color: [10/255, 83/255, 140/255, 1]
		size: root.width, root.height

		MDIconButton:
			icon: "close"
			on_release: app.exit_dialog()
			pos_hint: {"right": 1, "top": 1}
			theme_text_color: "Custom"
			text_color: [0/255, 0/255, 0/255, 1]

	MDCard:
		md_bg_color: [1, 1, 1, 1]
		size_hint: None, None
		size: 520, 600
		pos_hint: {"center_x": .5, "center_y": .5}
		elevation: 15
		padding: 20
		spacing: 30
		orientation: 'vertical'
		
		FitImage:
			size_hint: None, None
			height: "150dp"
			width: "450dp"
			source: "C:/projects/Atorlogo.jpg"
			halign: "center"

		Widget:
			size_hint_y: None
			height: -65
			color_active: [1, 1, 1, 1]

		MDCard:
			md_bg_color: [200/255, 200/255, 200/255, 1]
			elevation: 5
			size_y: 500
			orientation: 'vertical'
			pos_hint: {"center_x": .5, "center_y": .5}
			
			MDLabel:
				text: 'Create New Login'
				font_size: 30
				theme_text_color: "Custom"
				text_color: [125/255, 125/255, 125/255, 1]
				halign: "center"
				size_hint_y: None
				height: 60

			Widget:
				size_hint_y: None
				height: 15
				color_active: [1, 1, 1, 1]

			MDGridLayout:
				cols:2
				rows: 3
				spacing: 50, 25
				padding: 35, 20
				size_hint: 1, 1

				MDTextFieldRound:
					id: newaccount
					hint_text: 'New Username'
					icon_right: 'account-plus'
					font_size: 17
					color_active: [155/255, 155/255, 155/255, 1]
					normal_color: [155/255, 155/255, 155/255, 1]

				MDTextFieldRound:
					id: newfullname
					hint_text: 'Full Name'
					icon_right: 'account-circle'
					font_size: 17
					color_active: [155/255, 155/255, 155/255, 1]
					normal_color: [155/255, 155/255, 155/255, 1]

				MDTextFieldRound:
					id: newpassword
					hint_text: 'New Password'
					icon_right: 'key-variant'
					font_size: 17
					color_active: [155/255, 155/255, 155/255, 1]
					normal_color: [155/255, 155/255, 155/255, 1]
					password: True
				
				MDTextFieldRound:
					hint_text: 'Admin Key'
					icon_right: 'account-key'
					font_size: 17
					color_active: [155/255, 155/255, 155/255, 1]
					normal_color: [155/255, 155/255, 155/255, 1]
					password: True

			MDFloatLayout:
				MDFillRoundFlatButton:
					text: "CANCEL"
					font_size: 15
					pos_hint: {"center_x":.38, "center_y":.5}
					md_bg_color: [10/255, 83/255, 140/255, 1]
					on_release: app.root.current = "first"
				
				MDFillRoundFlatButton:
					text: "SUBMIT"
					font_size: 15
					pos_hint: {"center_x":.62, "center_y":.5}
					md_bg_color: [10/255, 83/255, 140/255, 1]
					on_release: root.signup()

			Widget:
				size_hint_y: None
				height: 15
				color_active: [1, 1, 1, 1]

#---------------#
#-- Home Page --#
#---------------#

<Home>
	
	MDFloatLayout:
		md_bg_color: [10/255, 83/255, 140/255, 1]
		size: root.width, root.height

		MDIconButton:
			icon: "close"
			on_release: app.exit_dialog()
			pos_hint: {"right": 1, "top": 1}
			theme_text_color: "Custom"
			text_color: [0/255, 0/255, 0/255, 1]

		MDFillRoundFlatButton:
			text: "SIGN OUT"
			font_size: 15
			pos_hint: {"right":.96, "top":.994}
			md_bg_color: [100/255, 100/255, 100/255, 1]
			theme_text_color: "Custom"
			text_color: 1/255, 1/255, 1/255, 1
			on_release: app.root.current = "first"
	
	MDCard:
		size_hint: None, None
		size: (root.width - 100), (root.height - 100)
		pos_hint: {"center_x":.5, "center_y":.5}
		elevation: 15
		padding: 20
		spacing: 30
		orientation: 'vertical'

		MDLabel:
			text: 'Choose Device Type'
			font_size: 30
			theme_text_color: "Custom"
			text_color: [125/255, 125/255, 125/255, 1]
			halign: "center"
			size_hint_y: None

		MDGridLayout:
			cols: 2
			rows: 2
			spacing: 15
			MDCard:
				size: 50, 50
				md_bg_color: [10/255, 83/255, 140/255, 1]
				elevation: 15
				
			#	Image:
			#		allow_stretch: True
			#		keep_raio: False
			#		source: "C:/kivygui/images/SCBA.jpg"
			#		pos_hint: {"center_x":.5, "center_y":.5}

			MDCard:
				size: 50, 50
				md_bg_color: [10/255, 83/255, 140/255, 1]
				elevation: 15
			MDCard:
				size: 50, 50
				md_bg_color: [10/255, 83/255, 140/255, 1]
				elevation: 15
			MDCard:
				size: 50, 50
				md_bg_color: [10/255, 83/255, 140/255, 1]
				elevation: 15