WindowManager:
	AppScreen1:
		name: "screen1"

<AppScreen1>
	MDFloatLayout:
		size_hint: root.height, root.width
		md_bg_color: [230/255, 230/255, 230/255, 1]

	MDCard:
		size_hint: None, None
		size: 520, 600
		md_bg_color: [255/255, 255/255, 255/255, 1]
		pos_hint: {"center_x": .5, "center_y": .5}
		elevation: 15
		padding: 20
		spacing: 30
		orientation: 'vertical'

		Widget:
			size_hint_y: None
			height: 15
			color_active: [1, 1, 1, 1]

		MDLabel:
			text: 'WELCOME'
			font_size: 60
			theme_text_color: "Custom"
			text_color: [200/255, 200/255, 200/255, 1]
			halign: "center"
			size_hint_y: None
			height: 80

		MDLabel:
			text: 'Sign in'
			font_size: 30
			theme_text_color: "Custom"
			text_color: [125/255, 125/255, 125/255, 1]
			halign: "center"
			size_hint_y: None
			height: 20

		MDTextFieldRound:
			hint_text: 'Enter Username'
			icon_right: 'account'
			size_hint_x: None
			width: 220
			font_size: 20
			pos_hint: {"center_x":.5}
			color_active: [230/255, 230/255, 230/255, 1]
			normal_color: [230/255, 230/255, 230/255, 1]

		MDTextFieldRound:
			hint_text: 'Enter Password'
			icon_right: 'key-variant'
			size_hint_x: None
			width: 220
			font_size: 20
			pos_hint: {"center_x":.5}
			color_active: [230/255, 230/255, 230/255, 1]
			normal_color: [230/255, 230/255, 230/255, 1]
			password: True

		MDFloatLayout:
			MDFillRoundFlatIconButton:
				icon: 'account-multiple-plus'
				text: "CREATE"
				font_size: 15
				pos_hint: {"center_x":.32, "center_y":.7}
				md_bg_color: [200/255, 200/255, 200/255, 1]

			MDFillRoundFlatIconButton:
				icon: 'login-variant'
				text: "LOG IN"
				font_size: 15
				size_hint_x: .295
				pos_hint: {"center_x":.67, "center_y":.7}
				md_bg_color: [200/255, 200/255, 200/255, 1]

		Widget:
			size_hint_y: None
			height: 15
			color_active: [1, 1, 1, 1]
