weight = float(input("How much does the package weigh in pounds: "))
price = 0
drone_price = 0
GroundPremium = 125.00

# Calculate price for ground shipping
if (weight > 0 and weight <= 2):
    price = (weight * 1.50) + 20

elif (weight > 2 and weight <= 6):
    price = (weight * 3.00) + 20

elif (weight > 6 and weight <= 10):
    price = (weight * 4.00) + 20

else:
    price = (weight * 4.75) + 20

# Calculate price for drone shipping
if (weight > 0 and weight <= 2):
    drone_price = (weight * 4.50)

elif (weight > 2 and weight <= 6):
    drone_price = (weight * 9.00)

elif (weight > 6 and weight <= 10):
    drone_price = (weight * 12.00)

else:
    drone_price = (weight * 14.25)

# Calculate cheapest shipping method
if (price < drone_price) and (price < GroundPremium):
    subtotal = price
    print("Ground Shipping is the cheapest!")
    print("Your subtotal is", subtotal)

elif (GroundPremium < price) and (GroundPremium < drone_price):
    subtotal = GroundPremium
    print("Premium Ground Shipping is the cheapest!")
    print("Your subtotal is", subtotal)

elif (drone_price < price) and (drone_price < GroundPremium):
    subtotal = drone_price
    print("Drone Shipping is the cheapest!")
    print("Your subtotal is", subtotal)

else:
    print("Your choice!")

# Calculate subtotal after taxes with 15% off if they have a discount code
tax = .07
answer = str(input("Do you have a discount code? ")).lower()

if (answer == "yes") or (answer == "y"):
    discount = .15
    discount_total = discount * subtotal
    subtotal -= discount_total
    print("A 15% discount of", discount_total, "will be applied to your total at checkout!")
    
# Calculate total after taxes
total = (subtotal * tax) + subtotal

print("Your total is", total)
